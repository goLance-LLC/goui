$font-family = 'Nunito Sans', sans-serif
$transition-duration = .2s

$indent = 1em

$text-shadow = 1px 1px 1px hsla(#000, .25)
$field-box-shadow = -1px -1px $color-border, 1px 1px $color-border

$font-regular = 400
$font-semibold = 600
$font-bold = 700
$font-extrabold = 800

$font-mini = .5em
$font-tiny = .65em
$font-small = .8em
$font-medium = 1em
$font-large = 1.2em
$font-big = 1.5em
$font-huge = 2em
$font-massive = 3em

$media-tiny = 320px
$media-small = 480px
$media-medium = 768px
$media-large = 992px
$media-big = 1200px

$media-sizes = 'tiny' $media-tiny,
               'small' $media-small,
               'medium' $media-medium,
               'large' $media-large,
               'big' $media-big
